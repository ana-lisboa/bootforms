{
    "name": "ana-lisboa/bootforms",
    "description": "Fork for admwathan/bootforms. Just a Formbuilder with some Bootstrap specific conveniences. Remembers old input, retrieves error messages and handles all your boilerplate Bootstrap markup automatically.",
    "authors": [
        {
            "name": "Ana Lisboa",
            "email": "ana@analisboa.pt"
        }
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.1.0",
        "ana-lisboa/form": "master"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "mockery/mockery": "0.9.*",
        "satooshi/php-coveralls": "dev-master"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/ana-lisboa/Form"
        }
    ],
    "autoload": {
        "psr-0": {
            "AnaLisboa\\BootForms": "src/"
        }
    },
    "minimum-stability": "stable"
}
